<h2>Quiz Info</h2>
<p>
	<strong>Title:</strong>
	<%= @quiz.title %>
</p>

<p>
	<strong>Description:</strong>
	<%= @quiz.description %>
</p>

<p>
	<strong>Instructions:</strong>
	<%= @quiz.instructions %>
</p>

<h4>Questions</h4>
<% @quiz.questions.each do |question| %>
	<p>
		<strong>Category:</strong> <%= question.category_id %>
		<strong>Body:</strong> <%= question.body %>
	</p>
<% end %>

<%= link_to 'Edit', edit_quiz_path(@quiz) %>
<%= link_to 'Back', quizzes_path %>