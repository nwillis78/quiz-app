<h2>Quiz Info</h2>
<p>
	<strong>Title:</strong>
	<%= @quiz.title %>
</p>

<p>
	<strong>Description:</strong>
	<%= @quiz.description %>
</p>

<p>
	<strong>Instructions:</strong>
	<%= @quiz.instructions %>
</p>

<h4>Questions</h4>
<% @quiz.questions.each do |question| %>
	<p>
		<strong>Category:</strong> <%= Category.find(question.category_id).categoryBody %>
		<strong>Body:</strong> <%= question.body %>
	</p>

	<% question.answers.each do |answer| %>
		<p>
			<strong>Answer:</strong><%= answer.answerString %>    <stong>isCorrect:</stong><%= answer.isCorrect %>
		</p>
	<% end %>
<% end %>

<%= link_to 'Edit', edit_quiz_path(@quiz) %>
<%= link_to 'Back', quizzes_path %>