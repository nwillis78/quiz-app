<%= form_for @quiz do |f| %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label :instructions %><br>
		<%= f.text_area :instructions %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>