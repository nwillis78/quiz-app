<h1>Quizzes</h1>



<div class="panel panel-default">
  <div class="panel-body">
    <p>You have <%= @noQuizzes %> quizzes ready to be set. Use the button below to set a quiz for students to take.</p>
	<div id="button_text">
		<button type = "button" class="btn btn-primary">
		<%= link_to 'Set Quiz', new_user_quiz_path %></button>
	</div>
  </div>
</div>

<h2>New and Existing Quizzes</h2>
<p>Create new quizzes and manage existing quizzes below.</p>

<div id="button_text">
<button type = "button" class="btn btn-primary">
<%= link_to 'New Quiz', new_quiz_path %></button>
</div>

<br>

<table class="table table-striped">
	<tr>
		<th>Language</th>
		<th>Title</th>
		<th>Description</th>
		<th>Instructions</th>
		<th>No. Questions</th>
	</tr>

	<% @quizzes.each do |quiz| %>
	<% @direction = Direction.find(quiz.language.direction_id).directionCode %>
		<tr>
			<td><%= quiz.language.languageName %></td>
			<td><div dir="<%=@direction%>"><%= quiz.title %></div></td>
			<td><div dir="<%=@direction%>"><%= quiz.description %></div></td>
			<td><div dir="<%=@direction%>"><%= quiz.instructions %></div></td>
			<td><%= quiz.links.length %></td>
			<td><button type="button" class="btn btn-default"><%= link_to 'Show', quiz_path(quiz) %></button></td>

			<td><button type= "button" class= "btn btn-default"><%= link_to 'Edit', edit_quiz_path(quiz)%></button></td>
			
			<td><div id="button_text">
    		<button type="button" class="btn btn-danger"><%= link_to 'Destroy', quiz_path(quiz),
			method: :delete, 
			data: {confirm: 'Are you sure?'} %></button>
    		</div></td>
		</tr>
	<% end %>
</table>

