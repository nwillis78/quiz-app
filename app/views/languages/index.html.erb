
<div class="panel panel-default">

    <div class="panel-heading">
      <h1 class="panel-title" style="font-size: 20px;">Listing Languages</h1>
    </div>

    <div class="panel-body">
      <div id="button_text">
        <button type = "button" class="btn btn-primary">
        <%= link_to 'New Language', new_language_path %></button>
    </div> 

    <br>

    <table style="width:100%;" class="index">
      <tr>
        <th>Name</th>
        <th>Direction</th>
        <th colspan="3">Manage</th>
      </tr>

      <% @languages.each do |language| %>
        <tr>
          <td style="width:auto;"><%= language.languageName %></td>
          <td style="width:auto;"><%= language.direction.directionName %></td>
          
          <td style="width:5%;"><button type="button" class="btn btn-default" style="width:100%;"><%= link_to 'Show', language_path(language) %></button></td>

          <td style="width:5%;"><button type= "button" class= "btn btn-default" style="width:100%;"><%= link_to 'Edit', edit_language_path(language)%></button></td>
          
          <td style="width:5%;"><div id="button_text">
            <button type="button" class="btn btn-danger" style="width:100%;"><%= link_to 'Destroy', language_path(language),
          method: :delete, 
          data: {confirm: 'Are you sure?'} %></button>
            </div></td>
        </tr>
      <% end %>
    </table>
    </div>
</div>



