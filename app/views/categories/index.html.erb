<div class="panel panel-default">

    <div class="panel-heading">
      <h1 class="panel-title" style="font-size: 20px;">Listing Question Categories</h1>
    </div>

    <div class="panel-body">
      <div id="button_text">
		<button type = "button" class="btn btn-primary">
		<%= link_to 'New Category', new_category_path %></button>
	  </div> 

    <br>

    <table style="width:100%;" class="index">
      <tr>
        <th>Category</th>
        <th colspan="3">Manage</th>
      </tr>

      <% @categories.each do |category| %>
        <tr>
          <td style="width:auto;"><%= category.categoryBody %></td>

          <td style="width:5%;"><button type="button" class="btn btn-default" style="width:100%;"><%= link_to 'Show', category_path(category) %></button></td>

			<td style="width:5%;"><button type= "button" class= "btn btn-default" style="width:100%;"><%= link_to 'Edit', edit_category_path(category)%></button></td>
			
			<td style="width:5%;"><div id="button_text">
    		<button type="button" class="btn btn-danger" style="width:100%;"><%= link_to 'Destroy', category_path(category),
			method: :delete, 
			data: {confirm: 'Are you sure?'} %></button>
    		</div></td>
        </tr>
      <% end %>
    </table>
    </div>
</div>