<h1>Listing Question Categories</h1>


<div id="button_text">
<button type = "button" class="btn btn-primary">
<%= link_to 'New Category', new_category_path %></button>
</div> 

<br>

<table class="table table-striped">
	<tr>
		<th>Category</th>
	</tr>

	<% @categories.each do |category| %>
		<tr>
			<td><%= category.categoryBody %></td>
			
			<td><button type="button" class="btn btn-default"><%= link_to 'Show', category_path(category) %></button></td>

			<td><button type= "button" class= "btn btn-default"><%= link_to 'Edit', edit_category_path(category)%></button></td>
			
			<td><div id="button_text">
    		<button type="button" class="btn btn-danger"><%= link_to 'Destroy', category_path(category),
			method: :delete, 
			data: {confirm: 'Are you sure?'} %></button>
    		</div></td>
		</tr>
	<% end %>
</table>

<%= link_to 'Back', welcome_index_path %>