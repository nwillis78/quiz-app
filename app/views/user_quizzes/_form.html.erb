<%= form_for @user_quiz do |f| %>
	<div class="field form-group">
	<p>
		<%= f.label :quiz_id, class: 'control-label'%>	
		<%= f.select :quiz_id, options_from_collection_for_select(Quiz.where("user_id = ?", current_user.id), :id, :title, {:selected => @quiz.id})%>

	</p>
	</div>

	<div class="field form-group">
	<p>
		<%= f.label :student_id, class: 'control-label'%>	
		<%= f.text_field :student_id%>

	</p>
	</div>

	<div class="actions form-group" id="button_text">
	<p>
	<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
 	Submit
	<% end %>
	</p>
	</div>


<% end %>