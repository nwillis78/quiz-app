<div id="wrapper" style="text-align: center">
<div class="panel panel-default" style="display: inline-block; width:50%;">
  <div class="panel-heading">
    <h3 class="panel-title" style="font-size: 200%;">Log in</h3>
  </div>
  <div class="panel-body">
  	You must log in using your University of Sheffield CiCS credentials.
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  		<div class="form-inputs">
  		<br>
			<%= f.label :username%>	<br>
			<%= f.text_field :username, required: false %> <br>

			<%= f.label :password%>	<br>
			<%= f.text_field :password, type: :password, required: false %> <br>

  		</div><br>
 		<div class="actions form-group" id="button_text">
			<p>
			<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
		 	Log in
			<% end %>
			</p>
		</div>
	<% end %>
  </div>
</div>
</div>

<%= render "devise/shared/links" %>